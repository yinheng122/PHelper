.drawView{
  position:fixed;

}
.drawImage{
  width: 40px;
  height: 40px;
}
.drawBView{
  width: 50px;
  height: 50px;
  background-color: #707070;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 25px;
  box-shadow:1px 1px 1px 1px lightgray;
}
.paintView{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
  flex-wrap: wrap;
}
.paintCell{
  margin-top: 10px;
  border: 0.5px solid #e2e2e2;
  margin-left: 15px;
}